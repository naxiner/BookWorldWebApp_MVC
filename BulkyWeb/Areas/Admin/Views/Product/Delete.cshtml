@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="border p-3">
				<div class="row p-1">
					<label asp-for="Title" disabled class="p-0"></label>
					<input asp-for="Title" type="text" class="form-control border-0 shadow" />
				</div>
				<div class="row p-1">
					<label asp-for="Description" disabled class="p-0"></label>
					<textarea asp-for="Description" type=" text" class="form-control border-0 shadow" ></textarea>
				</div>
				<div class="row p-1">
					<label asp-for="ISBN" disabled class="p-0"></label>
					<input asp-for="ISBN" type=" text" class="form-control border-0 shadow" />
				</div>
				<div class="row p-1">
					<label asp-for="Author" disabled class="p-0"></label>
					<input asp-for="Author" type=" text" class="form-control border-0 shadow" />
				</div>
				<div class="row p-1">
					<label asp-for="ListPrice" disabled class="p-0"></label>
					<input asp-for="ListPrice" type=" text" class="form-control border-0 shadow" />
				</div>
				<div class="row p-1">
					<label asp-for="Price" disabled class="p-0"></label>
					<input asp-for="Price" type=" text" class="form-control border-0 shadow" />
				</div>
				<div class="row p-1">
					<label asp-for="Price50" disabled class="p-0"></label>
					<input asp-for="Price50" type=" text" class="form-control border-0 shadow" />
				</div>
				<div class="row p-1">
					<label asp-for="Price100" disabled class="p-0"></label>
					<input asp-for="Price100" type=" text" class="form-control border-0 shadow" />
				</div>
				<div class="mt-3 row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">
							Delete
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control border">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>