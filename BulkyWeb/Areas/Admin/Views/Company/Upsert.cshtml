@model Company

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@(Model.Id != 0 ? "Update":"Create") Company</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Id" hidden />
			<div class="row">
				<div class="col-12">
					<div class="border p-3">
						<div class="row p-1">
							<label asp-for="Name" class="p-0"></label>
							<input asp-for="Name" type="text" class="form-control border-0 shadow" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="row p-1">
							<label asp-for="PhoneNumber" class="p-0"></label>
							<input asp-for="PhoneNumber" type="text" class="form-control border-0 shadow" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
						<div class="row p-1">
							<label asp-for="StreetAdress" class="p-0"></label>
							<input asp-for="StreetAdress" type="text" class="form-control border-0 shadow" />
							<span asp-validation-for="StreetAdress" class="text-danger"></span>
						</div>
						<div class="row p-1">
							<label asp-for="City" class="p-0"></label>
							<input asp-for="City" type="text" class="form-control border-0 shadow" />
							<span asp-validation-for="City" class="text-danger"></span>
						</div>
						<div class="row p-1">
							<label asp-for="State" class="p-0"></label>
							<input asp-for="State" type="text" class="form-control border-0 shadow" />
							<span asp-validation-for="State" class="text-danger"></span>
						</div>
						<div class="row p-1">
							<label asp-for="PostalCode" class="p-0"></label>
							<input asp-for="PostalCode" type="text" class="form-control border-0 shadow" />
							<span asp-validation-for="PostalCode" class="text-danger"></span>
						</div>
						<div class="mt-3 row">
							<div class="col-6 col-md-3">
								@if (Model.Id != 0)
								{
									<button type="submit" class="btn btn-primary form-control">Update</button>
								}
								else
								{
									<button type="submit" class="btn btn-primary form-control">Create</button>
								}
							</div>
							<div class="col-6 col-md-3">
								<a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control border">
									Back to List
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			
		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
